{
    "compilerOptions": {
        "composite": true,
        "declaration": true,
        "declarationDir": "./dist",
        "outDir": "./dist",
        "baseUrl": "./",
        "target": "es2017",
        "module": "CommonJS",
        "jsx": "react-jsx",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "strictNullChecks": true,
        "forceConsistentCasingInFileNames": true,
        "lib": [
            "dom",
            "dom.iterable",
            "esnext"
        ],
        "allowJs": true,
        "noEmit": false,
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "incremental": true
    },
    "rules": {
        "quotemark": [
            true,
            "single"
        ]
    },
    "include": [
      "index.tsx",
      "Component.tsx"      
    ],
  }
  